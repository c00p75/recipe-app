<div class="container">
  <h1>Editing recipe food</h1>
    <%= form_with model: @recipe_food, url: user_recipe_recipe_food_path(@recipe_food.recipe.user, @recipe_food.recipe, @recipe_food), method: :patch do |form| %>
      <p>Food name</p>
      <%= form.select :food_id, @foods.map { |food| [food.name, food.id] }, {}, { class:'form-select'} %>
      <br>
      <p>Quantity</p>
      <%= form.number_field :quantity, class:'form-control' %>
      <br>
      <%= form.submit "Add Ingredient" %>
    <% end %>
</div>
