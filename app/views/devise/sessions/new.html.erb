<h2 class="sign-up">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'registeration-form flex-center'}) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field remember-me">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<div class="hr"></div>

<div class="flex-center shared-links"><%= render "devise/shared/links" %></div>
