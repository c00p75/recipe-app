<p style="color: green"><%= notice %></p>

<div class="container recipes-container" style="max-width: 700px">
  <h1 class="text-center"><%=@recipe.name %></h1>
  <div class="row">
    <div class="col">
      <div>Preperation Time: <%= @recipe.preparation_time %></div>
      <div class="my-3">Cooking time: <%= @recipe.cooking_time %></div>
    </div>

    <div class="col">
      <div class="form-check form-switch">
        <%= form_with(model: @recipe, url: user_recipe_path(@user, @recipe), method: :patch) do |form| %>
          <div>
            <%= form.check_box :public, class: "form-check-input", checked: @recipe.public, onchange: "this.form.submit();" %>
            <%= form.label :public, class:"form-check-label" %>
          </div>

          <%= form.hidden_field :user_id, value: current_user.id %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <%= @recipe.description %>
  </div>

  <div class="row">
    <div class="col">
      <button type="button" class="btn btn-outline-secondary">Generate Shopping List</button>
    </div>

    <div class="col">
      <%= link_to 'Add Ingredients', new_user_recipe_food(@user), method: :post, class: "btn btn-outline-secondary" %>
    </div>
  </div>

  <div class="row">
  
  </div>  
</div>

<%= link_to "Back to recipes", user_recipes_path %>