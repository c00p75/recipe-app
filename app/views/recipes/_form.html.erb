    <div>
      <%= form.text_field :cooking_time, placeholder: 'Cooking Time' %>
    </div>

    <div style="width: 100%">
      <%= form.text_area :description, rows: 8, placeholder: 'Description' %>
    </div>

    <div class="flex">
      <%= form.label :public, style: "display: block" %>
      <%= form.check_box :public %>
    </div>

    <%= form.hidden_field :user_id, value: current_user.id %>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
